<div class="container">
  <h1>Details de la Chambre</h1>
  <div class="row">
    <div class="col-md-6">
        <%= image_tag("hotel maroc 1.png", style: "width: 500px; height: 500px;") %>
    </div>
    <div class="col-md-6">
      <h2><%= @room.hotel.name %></h2>
      <ul>
        <li>Capacité: <%= @room.capacity %> personnes</li>
        <li>Prix par nuit: $<%= @room.price_per_night %></li>
      </ul>
      <%= simple_form_for [@room, @booking] do |f| %>
        <%= f.input :starts_at, label: 'Date de début de séjour',
                    as: :string,
                    input_html: { class: 'form-control', data: { controller: "datepicker" } } %>
        <%= f.input :ends_date, label: 'Date de fin de séjour',
                    as: :string,
                    input_html: { class: 'form-control', data: { controller: "datepicker" } } %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.button :submit, "Réserver Maintenant", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Retour à la Page d'Accueil", rooms_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
